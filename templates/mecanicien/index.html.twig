{% extends 'base_admin.html.twig' %}

{% block title %}Mécaniciens{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des Mécaniciens</h1>
            <a href="{{ path('ajout_mecanicien') }}" class="btn btn-success">Ajouter un Mécanicien</a>
        </div>

        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for m in mecaniciens %}
                    <tr>
                        <td>
                            {% if m.photo_profile %}
                                <img src="{{ asset('uploads/' ~ m.photo_profile) }}"
                                     alt="Photo de {{ m.nom }}"
                                     class="rounded-circle mb-3"
                                     style="width: 100px; height: 100px; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('images/default-photo.png') }}"
                                     alt="Photo par défaut"
                                     class="rounded-circle mb-3"
                                     style="width: 50px; height: 50px; object-fit: cover;">
                            {% endif %}
                        </td>
                        <td>{{ m.nom }}</td>
                        <td>{{ m.prenom }}</td>
                        <td>{{ m.email }}</td>
                        <td>{{ m.tel }}</td>
                        <td>{{ m.adresse }}</td>
                        <td>
                            <a href="{{ path('modifier_mecanicien', {'id': m.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('supprimer_mecanicien', {'id': m.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce mécanicien ?')">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun mécanicien trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
