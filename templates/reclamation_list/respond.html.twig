<div class="modal-content">
    <button class="close-btn">×</button>
    <i class="fas fa-envelope response-icon"></i>
    <h2>Répondre à la réclamation</h2>
    <div class="reclamation-details">
        <p><strong>Titre :</strong> {{ reclamation.titre }}</p>
        <p><strong>Objet :</strong> {{ reclamation.contenu }}</p>
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.message, 'Votre réponse', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-textarea', 'rows': '3'}}) }}
            {{ form_errors(form.message) }}
        </div>
        <div class="button-container">
            <button type="submit" class="btn-submit" id="unique-submit-button">Envoyer</button>
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>

