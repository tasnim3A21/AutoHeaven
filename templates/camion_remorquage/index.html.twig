{% extends 'base_admin.html.twig' %}

{% block title %}Camion Remorquage{% endblock %}

{% block content %}
<div class="container">
    <h1>Camion Remorquage</h1>

    <div class="mb-4">
        <h2>New Camion</h2>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Create Camion</button>
        {{ form_end(form) }}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Modèle</th>
                <th>Année</th>
                <th>Numéro de téléphone</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for camion in camions %}
            <tr>
                <td>{{ camion.id_cr }}</td>
                <td>{{ camion.modele }}</td>
                <td>{{ camion.annee }}</td>
                <td>{{ camion.numTel }}</td>
                <td>{{ camion.statut }}</td>
                <td>
                    <a href="{{ path('app_camion_remorquage_edit', {'id': camion.id_cr}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="{{ path('app_camion_remorquage_delete', {'id': camion.id_cr}) }}" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}