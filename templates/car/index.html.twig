{% extends 'base.html.twig' %}

{% block title %}Nos Voitures{% endblock %}

{% block content %}
    <h1 class="mb-4">Découvrez Nos Voitures</h1>

    <div class="text-end mb-3">
        <a href="{{ path('chatbot') }}" class="btn btn-primary">
            <i class="bi bi-chat-dots"></i> Chat avec le Bot
        </a>
    </div>

    <div class="row">
        {% for voiture in voitures %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if voiture.image %}
                        <img src="{{ asset('uploads/voitures/' ~ voiture.image) }}" class="card-img-top" alt="Image de {{ voiture.marque }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ voiture.marque }}</h5>
                        <p class="card-text">
                            <strong>Couleur:</strong> {{ voiture.couleur }}<br>
                            <strong>Kilométrage:</strong> {{ voiture.kilometrage }} km<br>
                            <strong>Prix:</strong> {{ voiture.prix }} TND<br>
                            <strong>Disponibilité:</strong> {{ voiture.disponibilite }}
                        </p>
                    </div>
                    <div class="card-footer text-center">
    <a href="{{ path('car_details', { id: voiture.id_v }) }}" class="btn btn-outline-primary">Voir Détails</a>
    <a href="{{ path('currency_conversion', { amount: voiture.prix }) }}" class="btn btn-outline-success">Convertir le Prix</a>
    <a href="{{ path('car_details_index', { make: voiture.marque, model: '' }) }}" class="btn btn-outline-info">
        Infos Complètes
    </a>
    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#reservationModal{{ voiture.id_v }}">
        Reserver
    </button>
</div>
                </div>
                <!-- Reservation Modal -->
                <div class="modal fade" id="reservationModal{{ voiture.id_v }}" tabindex="-1" aria-labelledby="reservationModalLabel{{ voiture.id_v }}" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="reservationModalLabel{{ voiture.id_v }}">Reservation Form</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <form method="post" action="{{ path('car_reservation', { id: voiture.id_v }) }}">
                        <div class="modal-body">
                          <div class="mb-3">
                            <label class="form-label">Vehicule</label>
                            <input type="text" class="form-control" value="{{ voiture.marque }} ID: {{ voiture.id_v }}" readonly>
                            <input type="hidden" name="vehicule_id" value="{{ voiture.id_v }}">
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Client</label>
                            {% if app.user %}
                                <input type="text" class="form-control" value="{{ app.user.username }} ID: {{ app.user.id }}" readonly>
                                <input type="hidden" name="client_id" value="{{ app.user.id }}">
                            {% else %}
                                <input type="text" class="form-control" value="{{ "ADIB" }} ID: {{ "3" }}" readonly>
                                <input type="hidden" name="client_id" value="{{ "3" }}">
                            {% endif %}
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="reservation_date">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-dark">Reserver</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>Aucune voiture disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}


