{% extends 'base_admin.html.twig' %}

{% block title %}Edit Réservation Test Drive{% endblock %}

{% block content %}
<div class="container">
    <h1>Modifier Réservation TestDrive</h1>

    {{ form_start(form, {'attr': {'class': 'mt-4', 'novalidate': 'novalidate'}}) }}
        {{ form_widget(form._token) }}
        
        <div class="mb-3">
            <label class="form-label">Client</label>
            <input type="text" class="form-control" value="{{ reservation.user.nom }} {{ reservation.user.prenom }} ({{ reservation.idU }})" readonly>
            {{ form_widget(form.user, {'attr': {'class': 'd-none'}}) }}
        </div>
        
        <div class="mb-3">
            <label class="form-label">Véhicule</label>
            <input type="text" class="form-control" value="{{ reservation.voiture.marque }} ({{ reservation.idV }})" readonly>
            {{ form_widget(form.voiture, {'attr': {'class': 'd-none'}}) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.date) }}
            {{ form_widget(form.date) }}
            {{ form_errors(form.date) }}
        </div>

        <button type="submit" class="btn btn-primary mt-3">Modifier</button>
    {{ form_end(form, {'render_rest': false}) }}

    <a href="{{ path('app_reservation_test_drive') }}" class="btn btn-secondary mt-3">Annuler</a>
</div>
{% endblock %}