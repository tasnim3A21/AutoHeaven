{% extends 'base_admin.html.twig' %}

{% block title %}Modifier une Offre{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center text-warning mb-4">Modifier une Offre</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            {{ form_label(form.type_offre) }}
                            {{ form_widget(form.type_offre, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.taux_reduction) }}
                            {{ form_widget(form.taux_reduction, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.date_debut) }}
                            {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.date_fin) }}
                            {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_fin) }} <!-- Display the error message here -->
                        </div>

                        <!-- Display the selected equipment as a non-editable field -->
                        <div class="form-group mb-4">
                            <label for="equipement-name" class="form-label">Équipement</label>
                            <input type="text" class="form-control" value="{{ offre.equipement.nom }}" disabled />
                        </div>

                        <button type="submit" class="btn btn-warning w-100 mt-3">Modifier</button>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                        <div class="text-center">
                            <h5 class="mb-3">Image de l'Équipement</h5>
                            <!-- Display the image of the selected equipment -->
                            <img src="{{ asset(offre.equipement.image) }}" class="img-fluid mt-2 rounded shadow-lg" style="max-height: 400px; object-fit: cover;" alt="Image de l'équipement" />
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
